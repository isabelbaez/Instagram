<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".PostDetailsActivity">

    <ImageView
        android:id="@+id/ivPictureDetailed"
        android:layout_width="248dp"
        android:layout_height="330dp"
        android:layout_below="@+id/btnBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="64dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivPictureDetailed"
        android:layout_alignEnd="@+id/ivPictureDetailed"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/tvLikesDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPictureDetailed"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/btnLike"
        android:text="TextView"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="45dp" />

    <TextView
        android:id="@+id/tvDescriptionDetailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLikesDetailed"
        android:layout_alignStart="@+id/ivPictureDetailed"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="45dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Feed" />

    <Button
        android:id="@+id/btnLike"
        android:layout_width="25dp"
        android:layout_height="34dp"
        android:layout_below="@+id/ivPictureDetailed"
        android:layout_alignStart="@+id/ivPictureDetailed"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        app:icon="@drawable/ufi_heart"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="20dp"
        app:strokeColor="#FFFFFF" />

</RelativeLayout>